<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
        >
    <!--用户头像-->
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/cuntu_comment_user_icon"
            android:src="@mipmap/ic_launcher"
            />
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <!--用户名-->
            <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cuntu_comment_user_name"
                    android:textSize="10sp"
                    android:text="你好"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <!--回复条数-->
            <TextView
                    android:id="@+id/cuntu_comment_user_huifu"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/cuntu_comment_huifu_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <!--回复点击的ImageButton,可以实现为pupoMenu-->
            <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cuntu_comment_huifu_icon"
                    android:src="@mipmap/cuntu_comment_huifu_icon"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    />
        </RelativeLayout>
        <TextView
                android:id="@+id/cuntu_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:id="@+id/cuntu_comment_user_time"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    />
            <ImageView
                    android:gravity="center_vertical"
                    android:src="@mipmap/cuntu_comment_zan_unpressed"
                    android:layout_toLeftOf="@+id/cuntu_comment_user_zan_count"
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    />
            <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cuntu_comment_user_zan_count"
                    android:textSize="10sp"
                    android:text="0"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  android:paddingBottom="@dimen/activity_vertical_margin"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >

            <ImageView
                    android:id="@+id/cuntu_user_icon"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />

            <TextView
                    android:id="@+id/cuntu_user_name"
                    android:layout_toRightOf="@+id/cuntu_user_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    />
            <ImageView
                    android:layout_toLeftOf="@+id/cuntu_item_hot_type"
                    android:src="@mipmap/ic_rss_hot"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    />
            <TextView
                    android:id="@+id/cuntu_item_hot_type"
                    android:text="热门"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

        </RelativeLayout>

        <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/cuntu_user_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <ImageView
                android:id="@+id/cuntu_user_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                >

            <TextView
                    android:text="好笑"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <TextView
                    android:text="0"
                    android:id="@+id/cuntu_user_up"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <TextView
                    android:text="."
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <TextView
                    android:text="评论"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <TextView
                    android:text="0"
                    android:id="@+id/cuntu_comments_count"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <TextView
                    android:text="分享"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <TextView
                    android:text="0"
                    android:id="@+id/cuntu_content_share_count"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <LinearLayout
                    android:id="@+id/operation_support"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <RadioGroup
                        android:id="@+id/operation_radiogroup"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    <RadioButton
                            android:id="@+id/cuntu_operation_support"
                            android:background="@drawable/operation_support_selector"
                            android:button="@null"
                            android:focusable="false"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            />

                    <RadioButton
                            android:focusable="false"
                            android:id="@+id/cuntu_operation_unsupport"
                            android:background="@drawable/operation_unpport_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:tag="enable"
                            />
                </RadioGroup>

            </LinearLayout>

            <ImageView
                    android:id="@+id/cuntu_conmments_icon"
                    android:src="@mipmap/operation_comments"
                    android:layout_toRightOf="@+id/operation_support"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    />

            <ImageView
                    android:id="@+id/cuntu_share_icon"
                    android:src="@mipmap/operation_more_share"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    />
        </RelativeLayout>

    </LinearLayout>

